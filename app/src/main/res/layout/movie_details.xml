<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.app.movieshub.movie.MovieDetailsViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/movie_details_content"
            android:visibility="@{viewModel.contentVisibility}"
            app:viewModel="@{viewModel.contentViewModel}" />

        <include
            layout="@layout/error_state"
            android:visibility="@{viewModel.errorVisibility}"
            app:viewModel="@{viewModel.errorViewModel}" />
    </FrameLayout>
</layout>